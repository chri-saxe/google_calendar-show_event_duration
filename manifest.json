{
    "manifest_version": 3,
    "name": "Google calendar : Show event duration",
    "description": "Shows duration for each event by pressing B. (Works with french Gcal only, for now.)",
    "version": "1.0",

    "icons": {
        "16": "images/logo-16.png",
        "32": "images/logo-32.png",
        "128": "images/logo-128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["https://calendar.google.com/calendar/*"]
        }
    ]
}